<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Toolbar simulada con nombre y menÃº -->
    <LinearLayout
        android:id="@+id/chat_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/teal_700">

        <ImageButton
            android:id="@+id/btnChatBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/white"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageView
            android:id="@+id/ivChatFriendPic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_avatar_default"
            android:background="@drawable/bg_circle"
            android:clipToOutline="true"
            android:outlineProvider="background"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/tvChatFriendName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre Amigo"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"/>

        <ImageButton
            android:id="@+id/btnChatMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_more_vert"
            android:tint="@color/white"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <!-- Lista de mensajes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChat"
        android:layout_below="@id/chat_toolbar"
        android:layout_above="@id/chat_input_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:clipToPadding="false"/>

    <!-- Input de mensaje -->
    <LinearLayout
        android:id="@+id/chat_input_container"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/btnAttach"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_attach_file"
            android:tint="@color/gray"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Escribe un mensaje..."
            android:padding="8dp"
            android:background="@drawable/bg_input_message"/>

        <ImageButton
            android:id="@+id/btnSendMessage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_send"
            android:tint="@color/teal_700"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>
</RelativeLayout>
