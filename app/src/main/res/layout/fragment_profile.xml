<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Cabecera de perfil -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/gray_100"
            android:padding="24dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <!-- Foto grande y redonda -->
                <ImageView
                    android:id="@+id/ivProfilePic"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_avatar_default"
                    android:background="@drawable/bg_circle"
                    android:clipToOutline="true"
                    android:outlineProvider="background"
                    android:layout_marginBottom="16dp"/>

                <!-- Nombre destacado -->
                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre de Usuario"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <!-- Código de amigo grande -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:id="@+id/tvFriendCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Código: ABC123"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>

                    <ImageButton
                        android:id="@+id/btnCopyCode"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/ic_copy"
                        android:background="?attr/selectableItemBackgroundBorderless"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Opción Modificar perfil -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/gray_50"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/card_edit_label"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingStart="24dp"
                android:text="Modificar perfil"
                android:textSize="18sp"
                android:textColor="@color/black" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Opción Preferencias -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_prefs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/gray_50"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/card_prefs_label"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingStart="24dp"
                android:text="Preferencias"
                android:textSize="18sp"
                android:textColor="@color/black" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Opción Cerrar sesión -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/gray_50"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/card_logout_label"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingStart="24dp"
                android:text="Cerrar sesión"
                android:textSize="18sp"
                android:textColor="@color/red_dark" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>



